# Ridges Agent Workbench Environment Configuration
# Copy this file to .env and customize with your actual values

# Chutes API Configuration
CHUTES_API_KEY=your_chutes_api_key_here
CHUTES_BASE_URL=https://api.chutes.com

# Testing Configuration
# =============================================================================
# Default agent file path (relative to ridges directory)
DEFAULT_AGENT_PATH=miner/top_agent_tmp.py

# Default number of problems to test
DEFAULT_NUM_PROBLEMS=1

# Default problem set difficulty (easy, medium, hard)
DEFAULT_PROBLEM_SET=easy

# Default timeout per problem in seconds
DEFAULT_TIMEOUT=300

# Problem Set Options
# easy: Simple problems for quick testing
# medium: Moderate complexity problems
# hard: Complex problems for thorough evaluation

# Docker Configuration
# =============================================================================
# Docker image tags for sandbox environments
SANDBOX_IMAGE=sandbox-runner
PROXY_IMAGE=sandbox-nginx-proxy

# Legacy Docker Configuration (for compatibility)
DOCKER_IMAGE=ridges/sandbox:latest
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=2

# Development Configuration
# =============================================================================
# Enable debug mode (set to 'true' for verbose output)
DEBUG_MODE=false

# Enable automatic dependency installation
AUTO_INSTALL_DEPS=true

# Enable automatic repository updates
AUTO_UPDATE_REPO=true

# Legacy Development Options (for compatibility)
AUTO_UPDATE=true
VERBOSE_LOGGING=true

# Logging Configuration
# =============================================================================
# Directory for test run logs
RUNS_DIR=runs

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Legacy Logging Configuration (for compatibility)
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Agent Configuration
AGENT_PATH=miner/custom_agent.py
AGENT_TIMEOUT=300
MAX_RETRIES=3

# Performance Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60

# Security Settings
SANDBOX_MODE=true
NETWORK_ISOLATION=true

# Network Configuration
# =============================================================================
# Subtensor endpoint (for local development)
# SUBTENSOR_ADDRESS=ws://127.0.0.1:9945

# Ridges Configuration
# Ridges repository branch to use (usually 'main')
RIDGES_BRANCH=main

# Python version to use for virtual environment
PYTHON_VERSION=python3.11

# Virtual environment directory name
VENV_DIR=.venv-linux

