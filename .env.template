# Ridges Agent Workbench Environment Configuration Template
# Copy this file to .env and fill in your actual values
# 
# To use: cp env.template .env
# Then edit .env with your actual configuration values

# =============================================================================
# CHUTES API CONFIGURATION
# =============================================================================
# Your Chutes API key from the Chutes platform
# Get this from: https://chutes.ai/ (or your Chutes dashboard)
# This should also be added to ridges/proxy/.env
CHUTES_API_KEY=your_api_key_here

# =============================================================================
# RIDGES CONFIGURATION
# =============================================================================
# Ridges repository branch to use (usually 'main')
RIDGES_BRANCH=main

# Python version to use for virtual environment
PYTHON_VERSION=python3.11

# Virtual environment directory name
VENV_DIR=.venv-linux

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Default agent file path (relative to ridges directory)
DEFAULT_AGENT_PATH=miner/top_agent_tmp.py

# Default number of problems to test
DEFAULT_NUM_PROBLEMS=1

# Default problem set difficulty (easy, medium, hard)
DEFAULT_PROBLEM_SET=easy

# Default timeout per problem in seconds
DEFAULT_TIMEOUT=300

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker image tags for sandbox environments
SANDBOX_IMAGE=sandbox-runner
PROXY_IMAGE=sandbox-nginx-proxy

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Directory for test run logs
RUNS_DIR=runs

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Subtensor endpoint (for local development)
# SUBTENSOR_ADDRESS=ws://127.0.0.1:9945

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode (set to 'true' for verbose output)
DEBUG_MODE=false

# Enable automatic dependency installation
AUTO_INSTALL_DEPS=true

# Enable automatic repository updates
AUTO_UPDATE_REPO=true
